<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="darksection.qr.Help">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:textStyle="bold"
            android:textColor="#0f123e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="24dp"
            android:text="QR Code Generator"
            android:id="@+id/textView7" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.11" />

        <TextView
            android:textColor="#212333"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Write your text on the text bar and click on LETS GO. I automatically converts your text  into QR code. Take a screen shot and share with your Friends."
            android:id="@+id/textView8" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="78dp" />

        <TextView
            android:textStyle="bold"
            android:textColor="#FF0F123E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QR and BarCode Reader"
            android:textSize="24dp"
            android:id="@+id/textView9" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.11" />

        <TextView

            android:textColor="#212333"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placed you camera in the front  of QR or BarCode, it converts codes into text and show it in Dialogue box."
            android:id="@+id/textView10" />
    </LinearLayout>
</RelativeLayout>
